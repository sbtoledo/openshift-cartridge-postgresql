listen_addresses = '<%= ENV['OPENSHIFT_POSTGRESQL_HOST'] %>'
port = <%= ENV['OPENSHIFT_POSTGRESQL_PORT'] %>

# Unix socket

unix_socket_directories = '<%= ENV['OPENSHIFT_POSTGRESQL_SOCKET'] %>'
unix_socket_permissions = 0700

# Resource usage

shared_buffers = <%= (ENV['OPENSHIFT_GEAR_MEMORY_MB'].to_i * 0.15).to_i %>MB
effective_cache_size = <%= (ENV['OPENSHIFT_GEAR_MEMORY_MB'].to_i * 0.5).to_i %>MB

# Logging

log_line_prefix = '%m %u@%d %p %r '

# Statistics collector

track_address = '<%= ENV['OPENSHIFT_POSTGRESQL_HOST'] %>'
